<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pink_primary</item>
        <item name="colorAccent">@color/pink_primary</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppLogo">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/red_logo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppTagline">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    
    <style name="round_img">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

